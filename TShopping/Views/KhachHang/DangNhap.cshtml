@model TShopping.ViewModels.LoginVM
@{
    ViewData["Title"] = "DangNhap";
}

<!-- Checkout Page Start -->


<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng nhập</h1>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="col-lg-12">
            <nav>
                <div class="nav nav-tabs mb-3">
                    <button class="nav-link active border-white border-bottom-0" type="button" role="tab"
                            id="nav-about-tab" data-bs-toggle="tab" data-bs-target="#nav-about"
                            aria-controls="nav-about" aria-selected="true">
                        Khách hàng
                    </button>
                    <button class="nav-link border-white border-bottom-0" type="button" role="tab"
                            id="nav-mission-tab" data-bs-toggle="tab" data-bs-target="#nav-mission"
                            aria-controls="nav-mission" aria-selected="false">
                        Nhân viên
                    </button>
                </div>
            </nav>
            <div class="tab-content mb-5">
                <div class="tab-pane active" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                    <form asp-action="DangNhap" asp-controller="KhachHang" method="post">
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <div class="row g-5">
                            <div class="col-md-6 col-xl-4">
                                <div class="form-item">
                                    <label class="form-label my-3" asp-for="UserName"></label>
                                    <input type="text" class="form-control" asp-for="UserName">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-item">
                                    <label class="form-label my-3" asp-for="Password"></label>
                                    <input type="password" class="form-control" asp-for="Password">
                                    <input type="checkbox" id="showPasswordKH" /> Hiển thị mật khẩu <br />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-item my-2 col-12">
                                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng nhập</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a asp-action="DangKy" asp-controller="KhachHang">Đăng ký</a>
                    </form>
                </div>
                <div class="tab-pane" id="nav-mission" role="tabpanel" aria-labelledby="nav-mission-tab">
                    <form asp-action="DangNhap" asp-controller="NhanVien" method="post">
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <div class="row g-5">
                            <div class="col-md-6 col-xl-4">
                                <div class="form-item">
                                    <label class="form-label my-3">Mã nhân viên</label>
                                    <input type="text" class="form-control" name="MaNv">
                                </div>
                                <div class="form-item">
                                    <label class="form-label my-3">Mật khẩu</label>
                                    <input id="passwordNV" type="password" class="form-control" name="MatKhau">
                                    <input type="checkbox" id="showPasswordNV" /> Hiển thị mật khẩu <br />
                                </div>
                                <div class="form-item my-2 col-12">
                                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng nhập</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>    
    </div>
</div>
<!-- Checkout Page End -->
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script type="text/javascript">
        $('#showPasswordNV').change(function(){
            if ($(this).prop('checked') == true) {
                $('#passwordNV').attr('type', 'text')
            }
            else {
                $('#passwordNV').attr('type', 'password')
            }
        })
        $('#showPasswordKH').change(function () {
            if ($(this).prop('checked') == true) {
                $('#Password').attr('type', 'text')
            }
            else {
                $('#Password').attr('type', 'password')
            }
        })
    </script>
}

