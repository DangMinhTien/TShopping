@model IEnumerable<TShopping.ViewModels.MenuLoaiVM>
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục hàng hóa</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                var isActiveCss = "";
                if (item.IsActive)
                {
                    isActiveCss = "activeCatelogy";
                }
                <li class="@isActiveCss">
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-action="Index" asp-controller="hangHoa" asp-route-maloai="@item.MaLoai">
                            <i class="fas fa-apple-alt me-2"></i>
                            @item.TenLoai
                        </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>